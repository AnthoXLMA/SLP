Hello <%= @event_registration.user.name %>!

<%= t('application_mailer.event_cancellation_1',
 tour: @event_registration.event.tour.title,
 date: @event_registration.event.date) %>

<% if @alternate_events_sameevent.any? %>
<%= t('application_mailer.event_cancellation_sameevent',
 url: url_for(@event_registration.event.tour)) %>
<% @alternate_events_sameevent.each do |e| %>
 - <%= l(e.date, format: :long_with_day) %>
<% end %>
<% else %>
<%= t('application_mailer.event_cancellation_no_sameevent',
 url: url_for(@event_registration.event.tour)) %>
<% end %>

<% if @alternate_events_samedate.any? %>
<%= t('application_mailer.event_cancellation_samedate') %>
<% @alternate_events_samedate.each do |e| %>
 - <%= l(e.date, format: :long_with_day) %>: <%= link_to(e.tour.title, tour_url(e.tour_id)) %>
<% end %>
<% end %>

