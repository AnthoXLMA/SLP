<%= form_with(model: event, url: [@tour, @event]) do |form| %>
<div class="ui form">
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <div class="ui calendar datetimepicker">
      <div class="ui input left icon">
        <i class="calendar icon"></i>
        <%= text_field_tag(:date_t) %>
        <i class="remove right link icon"></i>
      </div>
    </div>
    <%= form.text_field :date, hidden: true %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>
